	</body>
	<script type="text/javascript" src="js/jquery-1.11.1.js" ></script>
	<script>
		var liL=$('#nav ul>li').length;
		var liW=$('#nav ul>li').outerWidth();
		var wiW=$(window).width();
		var index=0;
		var index1=0;
		var index2=0;
		
		$('#nav ul').css('width',wiW*liL)
		$('#nav ul>li').css('width',wiW)
		$('#wrap>ul>li').mouseover(function(){
			$(this).find('ul').stop().slideDown();
			})
		})
		$('#wrap>ul>li').mouseleave(function(){
			$(this).find('ul').stop().slideUp();

		
		var timer=setInterval(move,2000)
			function move(){
				index++;
				if(index==liL){
					index=0;
				}
				$('#nav ul').animate({'marginLeft':-index*wiW},700);
				$('ol>li').eq(index).addClass('active').siblings().removeClass('active');
			}
			 $("#nav>ul>li").eq(0).show();
			$('ol>li').click(function(){
				index=$(this).index();
				$('#nav ul').animate({'marginLeft':-index*wiW},700);
				$('ol>li').eq(index).addClass('active').siblings().removeClass('active');
			})
			$('#img-1').on('click',function(){
				clearInterval(timer);
				$('#nav ul').stop();
				index1--;
				if(index1==-1){
					index1=liL-1;
				}
				$('#nav ul').animate({'marginLeft':-index1*wiW},700);
				$('ol>li').eq(index1).addClass('active').siblings().removeClass('active');
			})
			
			$('#img-2').on('click',function(){
				clearInterval(timer);
				$('#nav ul').stop();
				index2++;
				if(index2==liL){
					index2=0;
				}
				$('#nav ul').animate({'marginLeft':-index2*wiW},700);
				$('ol>li').eq(index2).addClass('active').siblings().removeClass('active');
			})
			
			
			$('#nav').mouseover(function(){
				clearInterval(timer);
			})
			$('#nav').mouseleave(function(){
				timer=setInterval(move,2000);
			})
	</script>
</html>
